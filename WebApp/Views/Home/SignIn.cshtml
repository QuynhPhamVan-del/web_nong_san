            }
        })()
        //]]></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (Request["sc"] == "1")
    {
        <script>
            Swal.fire("Lỗi thông tin.");
        </script>
    }
</body>
<!--end::Body-->

</html>